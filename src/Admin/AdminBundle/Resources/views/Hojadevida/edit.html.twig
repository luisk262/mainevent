                                        </a>
                                    {%endif%}
                                    {{ form_row(edit_form.image,{
                                        'label': 'Foto Rotro',
                                       'attr': {'class':'form-control','accept':'image/x-png, image/gif, image/jpeg'}
                                       
                                     })}}
