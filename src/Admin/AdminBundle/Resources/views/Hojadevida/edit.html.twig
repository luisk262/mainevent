{% extends 'AdminAdminBundle:Dashboard:base.html.twig' %}
{% block Contenido %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Editar {{entity.nombre}}  {{entity.apellido}}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
